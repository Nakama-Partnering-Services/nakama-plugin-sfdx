{
	"name": "nakama-plugin-sfdx",
	"description": "This plugin provides commands to work with the coverage files generated by other commands such as sfdx force:source:deploy or sfdx force:apex:test:run",
	"version": "1.0.4",
	"author": "Gabriel Serrano @jdkgabri",
	"bugs": "https://github.com/Nakama-Partnering-Services/nakama-plugin-sfdx/issues",
	"dependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@commitlint/prompt-cli": "^17.0.3",
		"@oclif/core": "^1",
		"@salesforce/command": "^5",
		"@salesforce/core": "^3",
		"fast-xml-parser": "^4.0.9",
		"tslib": "^2"
	},
	"devDependencies": {
		"@oclif/test": "^2",
		"@salesforce/ts-sinon": "^1",
		"@types/chai": "^4",
		"@types/jsforce": "^1.9.43",
		"@types/mocha": "^8",
		"@typescript-eslint/eslint-plugin": "^4",
		"@typescript-eslint/parser": "^4",
		"chai": "^4",
		"eslint": "^7",
		"eslint-config-prettier": "^8",
		"eslint-plugin-header": "^3",
		"eslint-plugin-import": "^2",
		"eslint-plugin-jsdoc": "^35",
		"eslint-plugin-prettier": "^3",
		"eslint-plugin-typescript": "^0",
		"husky": "^8.0.0",
		"mocha": "^9",
		"nyc": "^15",
		"oclif": "^3",
		"prettier": "^2",
		"rimraf": "latest",
		"sinon": "10.0.0",
		"ts-node": "^10",
		"typescript": "4"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"files": [
		"/lib",
		"/messages",
		"/npm-shrinkwrap.json",
		"/oclif.manifest.json"
	],
	"homepage": "https://github.com/Nakama-Partnering-Services/nakama-plugin-sfdx",
	"keywords": [
		"sfdx-plugin"
	],
	"license": "MIT",
	"oclif": {
		"commands": "./lib/commands",
		"bin": "sfdx"
	},
	"repository": "Nakama-Partnering-Services/nakama-plugin-sfdx",
	"scripts": {
		"build": "tsc -p .",
		"lint": "eslint src/**/*.ts test/**/*.ts",
		"postpack": "rimraf oclif.manifest.json",
		"posttest": "eslint src/**/*.ts test/**/*.ts",
		"prepack": "rimraf lib && tsc -b && oclif manifest && oclif readme",
		"test": "nyc --extension .ts --require ts-node/register mocha --forbid-only \"test/**/*.test.ts\"",
		"version": "oclif readme && git add README.md",
		"prepare": "husky install",
		"commit": "commit"
	}
}
